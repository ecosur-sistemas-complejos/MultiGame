<?xml version="1.0"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx">
    <fx:Metadata>
        [HostComponent("mx.ecosur.mobile.component.StatusBox")]
    </fx:Metadata>
    <fx:Declarations>
        <s:DropShadowFilter id="shadow" strength=".3"/>
    </fx:Declarations>
    <s:states>
        <s:State name="loading"/>
        <s:State name="messaging"/>
    </s:states>
    <fx:Script>
        <![CDATA[

        ]]>
    </fx:Script>
    <s:Rect id="backgroundRect" left="0" right="0" top="0" bottom="0" radiusX="4" radiusY="4" filters="{[shadow]}">
        <s:fill>
            <s:SolidColor id="solid" color="{hostComponent.color}"/>
        </s:fill>
    </s:Rect>
    <s:TextArea id="textField" width="100%" height="100%" fontSize="16" fontWeight="bold" />
</s:Skin>
