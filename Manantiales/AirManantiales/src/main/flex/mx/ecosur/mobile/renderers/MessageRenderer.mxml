<?xml version="1.0"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:mx="library://ns.adobe.com/flex/mx">
    <fx:Declarations>
        <s:DateTimeFormatter id="fmt" dateTimePattern="HH:mm:ss"/>
    </fx:Declarations>
    <s:HGroup verticalCenter="0" left="2" right="2">
        <s:Label text="({fmt.format(data.dateSent)}) {data.sender.name}: "/>
        <s:Label text="{data.body}"/>
    </s:HGroup>
</s:ItemRenderer>
